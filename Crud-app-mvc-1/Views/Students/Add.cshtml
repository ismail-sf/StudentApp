@model StudentApp.Models.AddStudentViewmodel

<h1>Add Student</h1>

<form method="post">
    <div class="mt-3">
        <label class="mt-3"> Name:</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="mt-3"> Email:</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="mt-3"> Phone:</label>
        <input type="text" class="form-control" asp-for="Phone" />
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" asp-for="Subscribed" />
        <label class="form-check-label" for="Subscribed"> Subscribe</label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary"> save</button>
    </div>
</form>