@{
}
@model Crud_app_mvc_1.Models.Entities.Student

<h1>Edit Student</h1>

@if (Model == null)
{
    <div class="alert alert-danger">
        Student not found.
    </div>
}
else
{
<form method="post">
    <div class="mt-3">
        <label class="mt-3"> Id:</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mt-3">
        <label class="mt-3"> Name:</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="mt-3"> Email:</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="mt-3"> Phone:</label>
        <input type="text" class="form-control" asp-for="Phone" />
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" asp-for="Subscribed" />
        <label class="form-check-label" for="Subscribed"> Subscribe</label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary mt-3"> save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Students"> Delete</button>
    </div>
</form>
}


